<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp" android:background="@color/softTurquoise" android:padding="10dp">

    <ImageView
        android:id="@+id/reps_found_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/barbara_lee"/>

    <LinearLayout
        android:id="@+id/reps_found_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/reps_found_item_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reps_found_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Barbara Lee" />

        <TextView
            android:id="@+id/reps_found_item_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Democrat" />

        <TextView
            android:id="@+id/reps_found_item_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="primaryemail@email.com"/>

    </LinearLayout>


</RelativeLayout>